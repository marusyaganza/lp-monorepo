{
  "name": "lp-monorepo",
  "version": "1.0.0",
  "description": "monorepo",
  "main": "index.js",
  "repository": "/",
  "author": "marusyaganza",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start --stream",
    "storybook": "lerna run storybook --scope '@lp/ui' --stream",
    "cypress": "lerna run cypress",
    "cypress:run": "lerna run cypress:run",
    "prod": "lerna run prod --scope '@lp/front' --stream",
    "build:server": "lerna run build --scope '@lp/server'",
    "build:front": "yarn codegen --scope={'@lp/front','@lp/ui'} && lerna run prod --scope '@lp/front'",
    "eslint": "lerna run eslint",
    "ready": "lerna run ready --concurrency=3",
    "clean": "lerna run clean && rimraf node_modules",
    "test": "lerna run test",
    "codegen": "lerna run codegen --stream",
    "codegen:watch": "lerna run codegen:watch --stream",
    "release": "yarn lerna version --conventional-commits",
    "api-docs": "sh api-docs.sh"
  },
  "dependencies": {
    "lerna": "^8.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/config-lerna-scopes": "^17.0.2",
    "@microsoft/api-documenter": "^7.19.12",
    "@microsoft/api-extractor": "^7.30.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "commitlint": "^17.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.1",
    "lerna-changelog": "^2.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0"
  },
  "volta": {
    "node": "18.16.0",
    "yarn": "1.22.19"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
