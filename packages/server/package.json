{
  "name": "@lp/server",
  "version": "1.3.4",
  "description": "app for Spanish learners",
  "main": "dist/server.js",
  "scripts": {
    "build": "yarn codegen && tsc",
    "prod": "yarn codegen && tsc --noCheck",
    "dev": "yarn build && nodemon server.js",
    "copy": "cp -r ../shared/schema.graphql dist",
    "clean": "rimraf dist src/generated *.tsbuildinfo node_modules",
    "lint": "eslint src",
    "ts": "tsc --watch --preserveWatchOutput",
    "test": "jest  --runInBand",
    "coverage": "jest --runInBand --coverage",
    "test:watch": "jest --watch --detectOpenHandles",
    "ready": "yarn codegen && yarn eslint --fix",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "start": "lerna run dev,ts --scope '@lp/server'",
    "start:test": "yarn build && node dist/server.js"
  },
  "author": "Marusya Ganza",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "4.11.3",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@graphql-tools/load-files": "^7.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.10",
    "@types/node": "^24.2.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.17.0",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "volta": {
    "node": "18.17.0",
    "yarn": "1.22.19"
  }
}
