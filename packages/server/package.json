{
  "name": "@lp/server",
  "version": "0.0.2",
  "description": "app for Spanish learners",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.js --ignore 'src/db/db.json'",
    "copy": "cp -r ../shared/schema.graphql dist",
    "build": "yarn codegen && tsc",
    "clean": "rimraf dist src/generated *.tsbuildinfo",
    "eslint": "eslint src",
    "ts": "tsc --watch --preserveWatchOutput",
    "test": "jest",
    "ready": "yarn codegen && yarn eslint --fix && yarn test",
    "watch": "nodemon --watch './**/*.{ts,js}' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/app.ts",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "start": "yarn concurrently 'yarn nodemon app.js' 'yarn ts'"
  },
  "author": "Marusya Ganza",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.5.0",
    "graphql": "^16.6.0",
    "graphql-import-node": "^0.0.5",
    "jsonwebtoken": "^8.5.1",
    "lowdb": "^1.0.0",
    "mongodb": "3.6.2",
    "nanoid": "^2.1.3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@graphql-codegen/cli": "3.0.0",
    "@graphql-codegen/introspection": "^3.0.0",
    "@graphql-codegen/typescript": "3.0.0",
    "@graphql-codegen/typescript-resolvers": "3.0.0",
    "@types/node": "^18.11.18",
    "concurrently": "^7.6.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.9.5"
  }
}
