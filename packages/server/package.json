{
  "name": "@lp/server",
  "version": "1.0.0",
  "description": "app for Spanish learners",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.js --ignore 'src/db/db.json'",
    "copy": "cp -r ../shared/schema.graphql dist",
    "build": "yarn codegen && tsc && yarn copy",
    "clean": "rimraf dist src/generated *.tsbuildinfo node_modules",
    "eslint": "eslint src",
    "ts": "tsc --watch --preserveWatchOutput",
    "test": "jest --detectOpenHandles",
    "coverage": "jest --coverage",
    "test:watch": "jest --watch --detectOpenHandles",
    "ready": "yarn codegen && yarn eslint --fix && yarn test",
    "watch": "nodemon --watch './**/*.{ts,js}' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/app.ts",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "start": "yarn build && yarn concurrently 'yarn nodemon app.js' 'yarn ts'"
  },
  "author": "Marusya Ganza",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-codegen/cli": "3.0.0",
    "@graphql-codegen/introspection": "^3.0.0",
    "@graphql-codegen/typescript": "3.0.0",
    "@graphql-codegen/typescript-resolvers": "3.0.0",
    "@types/node": "^20.10.5",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.1",
    "graphql-import-node": "^0.0.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^7.2.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "concurrently": "^7.6.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.15"
  },
  "volta": {
    "node": "18.16.0",
    "yarn": "1.22.19"
  }
}
