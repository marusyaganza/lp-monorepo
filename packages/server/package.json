{
  "name": "@lp/server",
  "version": "0.0.2",
  "description": "app for Spanish learners",
  "main": "app.js",
  "scripts": {
    "start": "nodemon src/app.js --ignore 'src/db/db.json'",
    "build": "node src/app.js",
    "clean": "rimraf dist *.tsbuildinfo",
    "eslint": "eslint src",
    "ts": "tsc -b .",
    "test": "jest",
    "watch": "nodemon --watch './**/*.{ts,js}' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/app.ts",
    "dev": "tsc-watch --onSuccess \"npm run watch\""
  },
  "author": "Marusya Ganza",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^3.7.0",
    "date-fns": "^2.5.0",
    "graphql": "^16.5.0",
    "jsonwebtoken": "^8.5.1",
    "lowdb": "^1.0.0",
    "mongodb": "3.6.2",
    "nanoid": "^2.1.3"
  },
  "devDependencies": {
    "apollo-server-testing": "^2.25.3",
    "jest": "^28.1.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
