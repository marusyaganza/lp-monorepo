{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2022", "DOM", "ES2021.String"],
    "esModuleInterop": true,
    "composite": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "commonjs",
    "types": [],
    "declaration": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "skipLibCheck": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/tests", "**/*.test.ts", "**/__tests__",]
}