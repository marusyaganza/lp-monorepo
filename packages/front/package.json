{
  "name": "@lp/front",
  "version": "1.0.0",
  "description": "frontend",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --env mode=development",
    "codegen": "graphql-codegen --config codegen.yml",
    "prod": "webpack --env mode=production",
    "cypress": "npx cypress open",
    "cypress:run": "npx cypress run",
    "stylelint": "stylelint src",
    "eslint": "eslint src",
    "ready": "yarn codegen && yarn eslint --fix && yarn stylelint --fix && yarn cypress:run",
    "serve": "http-server",
    "clean": "rimraf dist src/generated *.tsbuildinfo public node_modules",
    "ts": "tsc -b .",
    "codegen:watch": "graphql-codegen --config codegen.ts -w",
    "start": "yarn dev"
  },
  "author": "",
  "license": "ISC",
