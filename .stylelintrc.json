{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "selector-class-pattern": null,
    "custom-property-pattern": null,
    "color-function-notation": "legacy",
    "import-notation": "string"
  },
  "plugins": ["stylelint-prettier", "stylelint-order"],
  "files": ["**/*.css"],
  "ignoreFiles": [
    "**/*.js",
    "**/*.svg",
    "**/*.png",
    "**/*.webP",
    "**/*.ico",
    "**/*.html",
    "**/*.tsx",
    "**/*.ts",
    "**/*.ttf",
    "**/*.woff",
    "**/*.woff2",
    "**/*.json",
    "generated"
  ]
}
